# 服务器配置
PORT=7878
BASE_URL=

# 信任反向代理（Nginx/Caddy 等）
TRUST_PROXY=true

# 环境模式
# production - 生产环境，自动启用 HTTPS cookie
# development - 开发环境
NODE_ENV=production

# CORS 配置
# 生产环境建议设置为您的域名，例如：https://yourdomain.com
# 设置为 true 允许所有来源（不推荐生产环境）
CORS_ORIGIN=true

# Session 密钥（生产环境务必修改）
SESSION_SECRET=your-secret-key-change-this

# Session 过期时间（毫秒）
SESSION_MAX_AGE=604800000

# 上传限制（字节）
MAX_FILE_SIZE=104857600

# 图片处理
DEFAULT_WEBP_QUALITY=90
THUMBNAIL_SIZE=400
THUMBNAIL_QUALITY=80

# 数据库配置
DB_CACHE_FLUSH_INTERVAL=5000
DB_CACHE_FLUSH_THRESHOLD=10

# 定时任务
CLEANUP_EXPIRED_INTERVAL=3600000
ENABLE_AUTO_CLEANUP=true

# 日志配置
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log
